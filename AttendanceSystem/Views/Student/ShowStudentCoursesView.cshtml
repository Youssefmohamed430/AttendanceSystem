@model List<Enrolllment>
@{
    ViewData["Title"] = "ShowStudentCoursesView";
}
<h1>Search Student</h1>
<form method="post" asp-action="ShowStudentCourses" asp-controller="Student">
    <div class="input-group">
        <input type="search" class="form-control rounded" placeholder="Search" name="Stuname" aria-label="Search" aria-describedby="search-addon" />
        <button type="submit" class="btn btn-outline-primary">search</button>
    </div>
</form>
<br />
@if(Model != null)
{
    <h1>Student Courses</h1>
    <br/>
    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Instructor</th>
                <th scope="col">Attendance times</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var enrollment in Model)
            {
                <tr>
                    <td>@enrollment?.course?.Id</td>
                    <th scope="row">@enrollment?.course?.Name</th>
                    <td>@enrollment?.course?.instructor?.User?.Name</td>
                    <td>@enrollment?.CrsAttendanceRate</td>
                </tr>
            }
        </tbody>
    </table>
}
else if(TempData?.Peek("Message")?.ToString() != null)
{
    <span class="text-danger">@TempData?.Peek("Message")?.ToString()</span>
}


